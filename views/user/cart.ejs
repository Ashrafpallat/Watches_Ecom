              </div>
            </form>
            <a class="order" href="/checkout">Continue</a>
            <div class="total-item">
              <!-- <h3>OPTIONS</h3> -->
              <!-- <h4>COUPONS</h4> -->
              <!-- <a class="cpns" href="#">Apply Coupons</a> -->
              <!-- <p><a href="#">Log In</a> to use accounts - linked coupons</p> -->

            </div>
          </div>
          <div class="clearfix"></div>
        </div>
      </div>

    </div>
  </div>
