    <!-- partial -->
    <div class="main-panel">
      <div class="content-wrapper">
        <div class="row">
          <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <form action="/admin/generate-sales-report" method="post">
                <div class="row">
                  <div class="col-md-3">
                    <div class="form-group">
                      <label for="start-date">Start Date:</label>
                      <input type="date" id="start-date" name="start-date" class="form-control">
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <label for="end-date">End Date:</label>
                      <input type="date" id="end-date" name="end-date" class="form-control">
                    </div>
                  </div>
                  <div class="col-md-3 pt-4">
                    <button type="submit" class="btn btn-sm btn-primary">Fetch Orders</button>
                  </div>
                </div>
              </form>




                <p class="card-description">
                  <!-- Add class <code>.table-striped</code> -->
                </p>
                <!-- <a href="/admin/addcoupon"><button type="button" class="btn btn-primary">Add Coupons</button></a> -->
                <div class="table-responsive">
                  <table class="table table-striped" id="myTable">
                    <thead>
                      <tr>
                        <th>
                          Sl No
                        </th>
                        <th>
                          Id
                        </th>
                        <th>
                          User Name
                        </th>
                        <th>
                          Payment method
                        </th>
                        <th>
                          Total
                        </th>
                        <th>
                          Date
                        </th>
                        <th>
                          Address
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      <% orders.forEach(order => { %>

                      <tr>
                        <td>
                          <%= order._id %>
                        </td>
                        <td>
                          <%= order.user.fname %>
                        </td>
                        <td>
                          <%= order.paymentMethod %>
                        </td>
                        <td>
                          ₹ <%= order.totalAmount %>
                        </td>

                        <td>
                          <%= order.createdAt.toLocaleDateString() %>
                        </td>
                        <td style="max-width: 200px;">
                          <div style="overflow: hidden; text-overflow: ellipsis;">
                            <%= order.selectedAddress %>
                          </div>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                  <strong style="float: right;">Total Amount : <%= totalAmount %></strong>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <!-- <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Premium <a
