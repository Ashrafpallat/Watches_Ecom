<%-include('./includes/header.ejs')  %>

</head>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<body>
  <div class="container-scroller">
    <%-include('./includes/headerNav.ejs')  %>

    <!-- partial -->
    <div class="main-panel">
      <div class="content-wrapper">
        <div class="row">
          <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">All Products</h4>
                <p class="card-description">
                  <!-- Add class <code>.table-striped</code> -->
                </p>
                <a href="/admin/addproducts"><button type="button" class="btn btn-primary">Add Products</button></a>
                <div class="table-responsive">
                  <table class="table table-striped">
                    <thead>
                      <tr>
                        <th>
                          Image
                        </th>
                        <th>
                          Title
                        </th>
                        <th>
                          Discription
                        </th>
                        <th>
                          Catogory
                        </th>
                        <th>
                          Quanitty
                        </th>
                        <th>
                          Price
                        </th>
                        <th>
                          Action
                        </th>
                      </tr>
                    </thead>
                    <tbody>
                      <% products.forEach(product=> { %>
                      <tr>
                        <td class="py-1">
                          <img src="\<%= product.imageURLs[3] %>" alt="<%= product.imageURLs[3] %>" style=" border-radius: 0%;">
                        </td>
                        <td>
                          <%= product.title %>
                        </td>
                        <td>
                          <%= product.description %>
                          <!-- <div class="progress">
                              <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div> -->
                        </td>
                        <td>
                          <%= product.category.name %>
                        </td>
                        <td>
                          <%= product.quantity %>
                        </td>
                        <td>
                          <%= product.price %>
                        </td>
                        <td>
                          <div style="margin-bottom: 5px;">
                            <a href="/admin/edit-product/<%= product._id %>"><button type="button" class="btn btn-sm btn-dark" style="width: 100px;">Edit</button></a>
                          </div>
                          <div style="margin-bottom: 5px;">
                            <% if(product.status=='listed'){ %>
                              <a href="" class="btn btn-sm  btn-danger" style="width: 100px;" onclick="listProduct(event,'<%=product._id  %>');">Unlist</a>

                              <% }else{ %>
                               <a href="" class="btn btn-sm btn-success" style="width: 100px;" onclick="unlistProduct(event,'<%=product._id  %>');">List</a>        
                                <% } %>
                          </div>
                          <!-- <div>
                                <a href="/delete-product/<%= product._id %>"
                                  onclick="return confirm('Are you sure you want to delete this product?');">
                                  <button type="button" class="btn btn-sm btn-danger"
                                    style="width: 100px;">Delete</button>
                                </a>
                              </div> -->
                        </td>
                      </tr>
                      <% }); %>

                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <!-- <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Premium <a
                    href="https://www.bootstrapdash.com/" target="_blank">Bootstrap admin template</a> from
                  BootstrapDash.</span>
                <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center">Copyright Â© 2021. All rights
                  reserved.</span> -->
            </div>
          </footer>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="../../vendors/bootstrap-datepicker/bootstrap-datepicker.min.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../js/off-canvas.js"></script>
    <script src="../../js/hoverable-collapse.js"></script>
    <script src="../../js/template.js"></script>
    <script src="../../js/settings.js"></script>
    <script src="../../js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <!-- End custom js for this page-->
    <script>
      async function listProduct(event, productId) {
        event.preventDefault(); // Prevent the default behavior of the anchor
      
        Swal.fire({
          title: "Are you sure?",
          text: "",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes"
        }).then(async (result) => {
          if (result.isConfirmed) {
            try {
              const response = await $.ajax({
                type: 'POST',
                data: { productId: productId },
                url: '/admin/listproduct',
              });
      
              if (response.success) {
                Swal.fire({
                  title: "",
                  text: "Successfully listed!",
                  icon: "success"
                });setTimeout(() => {
                  window.location.href = window.location.href;
                }, 1000);
      
                // Optionally, you can refresh the page
                // window.location.href = window.location.href;
              }
            } catch (error) {
              console.error(error);
            }
          }
        });
      }
      
      async function unlistProduct(event, productId) {
        event.preventDefault(); // Prevent the default behavior of the anchor
      
        Swal.fire({
          title: "Are you sure?",
          text: "",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes"
        }).then(async (result) => {
          if (result.isConfirmed) {
            try {
              const response = await $.ajax({
                type: 'POST',
                data: { productId: productId },
                url: '/admin/unlistproduct',
              });
      
              if (response.success) {
                Swal.fire({
                  title: "",
                  text: "Successfully unlisted!",
                  icon: "success"
                });setTimeout(() => {
                  window.location.href = window.location.href;
                }, 1000);
      
                // Optionally, you can refresh the page
                // window.location.href = window.location.href;
              }
            } catch (error) {
              console.error(error);
            }
          }
        });
      }
      </script>
    
</body>

</html>