          <div class="col-12 grid-margin stretch-card">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Add new offer</h4>

                <form action="/admin/add-offer" class="forms-sample" method="post">
                  <div class="form-group">
                    <label for="name">Title:</label>
                    <input type="text" id="name" name="title" class="form-control" pattern="^\S.*\S$" title="Leading and trailing spaces are not allowed" required>
                  </div>
                  <div class="form-group">
                    <label for="name">Starting date:</label>
                    <input type="date" id="name" name="startingDate" class="form-control" style="width: auto;" required>
                  </div>
                  <div class="form-group">
                    <label for="name">Expiry date:</label>
                    <input type="date" id="name" name="expiryDate" class="form-control" style="width: auto;" required>
                  </div>
                  <div class="form-group">
                    <label for="name">Percentage</label>
                    <input type="number" id="name" name="percentage" class="form-control" min="0" required>
                  </div>

                  <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add Offer</button>
                  </div>
              </div>


              </form>

